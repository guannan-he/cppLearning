{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ 生成活动文件",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lgtest",
                "-lpthread"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        },
        {
            "label": "Activate Test Explorer",
            "type": "shell",
            "command": "echo ${command:test-explorer.reload}",
            "problemMatcher": [],
            "runOptions": {
              "runOn": "folderOpen" // This will cause the triggering. Have to run manually once!
            }
          }
    ],
    "version": "2.0.0"
}